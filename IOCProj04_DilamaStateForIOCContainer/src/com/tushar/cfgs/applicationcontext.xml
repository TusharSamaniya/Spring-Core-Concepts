<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">
    
     <!-- Spring bean cfg enabling static factory method bean instantiation-->
      <bean id="dateTime" class="java.time.LocalDateTime" factory-method="now" primary = "true"/>
     
		<bean id="ldt2" class="java.time.LocalDateTime" factory-method="of">
     	<constructor-arg name = "year" value = "2020" />
     	<constructor-arg name = "month" value = "1" />
     	<constructor-arg name = "dayOfMonth" value = "1" />
     	<constructor-arg name = "hour" value = "22" />
     	<constructor-arg name = "minute" value = "15" />
     	<constructor-arg name = "second" value = "10" />
     </bean>
     
     <context:component-scan base-package="com.tushar.sbeans"/>
     
</beans>


